{
  "name": "@agogpixel/phaser3-ts-utils",
  "version": "0.0.0",
  "description": "Phaser 3 TypeScript utilities.",
  "main": "./phaser-ts-utils.js",
  "types": "./phaser-ts-utils.d.ts",
  "scripts": {
    "build": "npm run build:bundle && npm run build:js && npm run build:docs",
    "build:bundle": "webpack --progress --color",
    "build:docs": "typedoc --out dist/docs --entryPointStrategy expand src/phaser-ts-utils.d.ts",
    "build:js": "tsc --project tsconfig.build.json",
    "clean": "shx rm -rf dist",
    "lint": "eslint jest.config.js webpack.config.js src test && prettier --check .",
    "lint:fix": "eslint --fix jest.config.js webpack.config.js src test && prettier --write .",
    "postbuild": "ts-node scripts/post-build.ts",
    "prebuild": "npm run clean",
    "prepare": "husky install",
    "prepare:release": "ts-node scripts/prepare-release --",
    "publish:release": "ts-node scripts/publish-release --",
    "start": "jest --watch",
    "test": "jest --coverage",
    "test:dist": "cd test/smoke && npm install && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agogpixel/phaser3-ts-utils.git"
  },
  "author": "kidthales <kidthales@agogpixel.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agogpixel/phaser3-ts-utils/issues"
  },
  "homepage": "https://github.com/agogpixel/phaser3-ts-utils#readme",
  "peerDependencies": {
    "phaser": ">=3.8.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.27",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "jest-canvas-mock": "^2.3.1",
    "lint-staged": "^11.2.3",
    "phaser": "^3.55.2",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "source-map-loader": "^3.0.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.7",
    "typedoc-plugin-rename-defaults": "^0.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --cache --fix",
    "*.(json|md|yml)": "prettier --write"
  }
}
