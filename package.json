{
  "name": "@agogpixel/phaser3-ts-utils",
  "version": "0.1.0",
  "description": "Phaser 3 TypeScript utilities.",
  "main": "./phaser-ts-utils.js",
  "types": "./phaser-ts-utils.d.ts",
  "scripts": {
    "postinstall": "husky install",
    "start": "jest --watch",
    "test": "jest --coverage",
    "prebuild": "npm run clean -- --dist",
    "build": "npm run build-bundle && npm run build-js && npm run build-docs",
    "postbuild": "npm run copy-package-json && shx cp LICENSE README.md dist",
    "smoke-test": "cd test/smoke && npm install && npm test",
    "build-bundle": "webpack --progress --color && shx cp src/phaser-ts-utils.d.ts dist",
    "build-js": "tsc --project tsconfig.build.json",
    "build-docs": "typedoc --out dist/docs --entryPointStrategy expand src/phaser-ts-utils.d.ts && shx cp LICENSE dist/docs",
    "copy-package-json": "ts-node scripts/copy-package-json.ts",
    "create-package-tarball": "ts-node scripts/create-package-tarball.ts",
    "publish-package-tarball": "ts-node scripts/publish-package-tarball/cli.ts",
    "compare-package-version": "ts-node scripts/compare-package-version.ts",
    "lint": "ts-node scripts/lint.ts",
    "lint:fix": "npm run lint -- --fix",
    "clean": "ts-node scripts/clean.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agogpixel/phaser3-ts-utils.git"
  },
  "author": "kidthales <kidthales@agogpixel.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agogpixel/phaser3-ts-utils/issues"
  },
  "homepage": "https://agogpixel.github.io/phaser3-ts-utils",
  "peerDependencies": {
    "phaser": ">=3.8.0",
    "typescript": ">=2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^14.17.27",
    "@types/semver": "^7.3.9",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "jest-canvas-mock": "^2.3.1",
    "lint-staged": "^11.2.3",
    "minimist": "^1.2.5",
    "phaser": "^3.55.2",
    "prettier": "^2.4.1",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "shx": "^0.3.3",
    "source-map-loader": "^3.0.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.7",
    "typedoc-plugin-rename-defaults": "^0.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --cache --fix",
    "*.(json|md|yml)": "prettier --write"
  }
}
